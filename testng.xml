	<test name="DropBox Testing using Firefox">
		<parameter name="browser" value="firefox">
			<classes>
				<class name="testcases.TestDropBox"></class>
			</classes>
		</parameter>
	</test>

	<test name="Gmail testing using Firefox">
		<parameter name="browser" value="firefox">
			<classes>
				<class name="testcases.TestGmail"></class>
			</classes>
		</parameter>
	</test>

</suite>
