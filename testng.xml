<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Selenium Grid Testing" verbose="2" parallel="tests">

	<test name="DropBox Testing using Chrome">
		<parameter name="browser" value="chrome">
			<classes>
				<class name="testcases.TestDropBox"></class>
			</classes>
		</parameter>
	</test>

	<test name="Gmail testing using Chrome">
		<parameter name="browser" value="chrome">
			<classes>
				<class name="testcases.TestGmail"></class>
			</classes>
		</parameter>
	</test>
	
	
<!-- =============================================================================================================== -->
